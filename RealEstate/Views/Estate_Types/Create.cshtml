@model RealEstate.Models.Estate_Types
@{
    Layout = null;
}
<div class="modal-header">
    <button class="btn btn-sm pull-right btn-danger" type="button" id="btnCloseModal" data-dismiss="modal">X</button>
    <h2></h2>
</div>
<div class="modal-body">
    @using (Html.BeginForm())
    {  
        <div class="form-horizontal" id="CreateForm">
            @Html.AntiForgeryToken()
            <div class=" form-group">
                <label for="Name" class="col-sm-4 control-label">Name </label>
                <div class="col-sm-8">
                    <input class="form-control" type="text" name="Name" id="Name" placeholder="Estate Type name" />
                </div>
            </div>
            <div class=" form-group">
                <label for="IsDelete" class="col-sm-4 control-label">Delete</label>
                <div class="col-sm-8">
                    @Html.RadioButtonFor(model => model.IsDelete, true, new { value = true }) <span>Yes</span>
                    @Html.RadioButtonFor(model => model.IsDelete, false, new { value = false, @checked = "checked" }) <span>No</span>
                </div>
            </div>
        </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            <button class="btn btn-success" type="button" onclick="CreateNew()"> Save </button>
        </div>
    }
</div>
