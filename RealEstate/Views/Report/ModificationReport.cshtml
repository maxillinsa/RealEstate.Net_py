
@{
    ViewBag.Title = "Modification Report";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using MvcPaging
@model  MvcPaging.IPagedList<RealEstate.Models.Estate>

<div class="clearfix">
</div>
@using (Ajax.BeginForm("ModificationReport", "Report", new { flag = false },
                 new AjaxOptions { UpdateTargetId = "grid-list", HttpMethod = "get", LoadingElementId = "loading", OnBegin = "beginPaging", OnSuccess = "successPaging", OnFailure = "failurePaging" }, new { id = "OK" }))
{
    <div class="col-xs-12">
        <div id="searchBox" class="search-form " style="display:block ">
            <div class="col-md-3 form-group">
                <input class="form-control" id="appendedInputButton" type="text" name="kyHieu" placeholder="Input ID" />
            </div>
                @*<div class="col-md-2 form-group">
                  
                        <input required type="date" value="@ViewBag.FromDate" placeholder="Select date" name="FromDate" class="form-control" />
                     
                    
                </div>
                <div class="col-lg-2 form-group">
                    <select class="form-control" name="LocTheo" id="LocTheo">
                        <option selected value="0">All  </option>
                        <option selected value="1">Edit Date  </option>
                        <option value="2">Created Date</option>
                    </select>
                </div>*@
                <div class="col-md-3 form-group">

                    <input value="Filter" type="submit" class="btn btn-warning" />
                </div>
            </div>
    </div>

    <div id="grid-list">
        @{ Html.RenderPartial("AjaxEstate", Model); }
    </div>
}
<script type="text/javascript">

    function beginPaging(args) {
        // Animate
        $('#grid-list').fadeOut('normal');
    }

    function successPaging() {
        // Animate
        $('#grid-list').fadeIn('normal');
        $('a').tooltip();
    }

    function failurePaging() {
        alert("Could not retrieve list.");
    }

</script>
<style>
    #products_info {
        display: none;
    }

    .pagination {
        display: inherit;
    }

    .pager1 {
        text-align: center;
    }
</style>
